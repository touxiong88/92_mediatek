<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e5e5">
    <include
        android:id="@+id/include_title"
        layout="@layout/title"
        android:layout_alignParentTop="true" />
    <RelativeLayout
        android:id="@+id/layout_noUpdate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_title"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/noUpdate_logo"
            android:src="@drawable/noupdate_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="120dip" />
        <TextView
            android:id="@+id/noupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noUpdate_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dip"
            android:text="@string/no_update"
            android:textColor="#aacd06"
            android:textSize="30sp"/>
    </RelativeLayout>
</RelativeLayout>
