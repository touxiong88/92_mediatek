<?xml version="1.0" encoding="UTF-8"?>     
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"> 
     
    <item android:id="@android:id/background" android:drawable="@drawable/letv_play_controller_volume_bg" />
     
    <item android:id="@android:id/progress"> 
        <clip android:gravity = "left"> 
            <shape> 
                <corners android:radius="6dip" /> 
                <gradient 
                        android:startColor="#ffe91515" 
                        android:endColor="#ff550202" 
                        android:angle="270"/> 
                <stroke android:width="2dip" android:color="#00ffffff" />
            </shape> 
        </clip> 
    </item> 
     
</layer-list>