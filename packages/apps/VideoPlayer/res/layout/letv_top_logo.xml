<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/letv_title_bg"
    >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/letv_top_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dip"/>
    
    <!-- android:src="@drawable/umeng_handler" -->
    <ImageView
        android:id="@+id/umeng_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@null"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="8dip"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/top_title"  
        android:layout_centerVertical="true"
        style="@style/letv_22_ececec"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
		android:layout_marginRight="8dip">
        	    
        <!-- android:src="@drawable/title_favorite_button" -->
	    <ImageView 
			android:id="@+id/favorite"
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
	        android:src="@null"/> 
			
		<ImageView 
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/line"
	        android:src="@drawable/letv_title_line"
	        android:layout_gravity="center"
	        android:layout_marginRight="5dip"
	        android:layout_marginLeft="5dip"/> 
			
		
		<!-- android:src="@drawable/title_search_button" -->
	    <ImageView 
	        android:id="@+id/search"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@null"/>
       
    </LinearLayout>
    

    
</RelativeLayout>
