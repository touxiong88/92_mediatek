<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Title.Second">
    <TextView android:id="@+id/list_title" android:layout_width="wrap_content"
        android:layout_height="match_parent" android:layout_alignParentLeft="true"
        android:layout_centerInParent="true" android:layout_marginLeft="@dimen/HeaderMarginLeft"
        android:text="@string/dones_title" android:textStyle="bold"
        android:textColor="@color/ListHeaderTextColor" android:textSize="@dimen/ListHeaderTextSize" />

    <ImageView android:id="@+id/btn_expand" android:layout_width="wrap_content"
        android:layout_height="match_parent" android:layout_alignParentRight="true"
        android:layout_gravity="center" android:src="@drawable/ic_expand_open" />
</RelativeLayout>
