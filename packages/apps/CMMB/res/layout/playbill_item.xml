<?xml version="1.0" encoding="utf-8"?>
<com.mediatek.cmmb.app.RevealLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_pannel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/item_header"
        android:layout_width="match_parent"
        android:layout_height="26dip"
        android:paddingLeft="10dip"
        android:gravity="center_vertical"
        android:background="@color/playbill_item_header_background"
        android:textColor="@color/playbill_item_header_foreground"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView 
                android:id="@+id/item_preview"
                android:layout_width="78dip"
                android:layout_height="60dip" 
                android:layout_marginRight="6dip"
                android:background="@drawable/ic_logo_background"
                android:src="@drawable/ic_logo_default"
                />
            <ImageView android:id="@+id/item_subscribed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/item_preview"
                android:layout_alignBottom="@id/item_preview"
                />
            <ImageView
                android:id="@+id/item_overlay"
                android:layout_width="78dip"
                android:layout_height="60dip" 
                android:layout_marginRight="6dip"
                android:src="@drawable/ic_playbill_overlay"
                android:scaleType="centerInside"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/item_switch"
                android:layout_width="wrap_content"
                android:layout_height="60dip"
                android:layout_marginLeft="6dip"
                android:layout_alignParentRight="true"
                android:src="@drawable/expander_ic_minimized"
                android:scaleType="centerInside"
                />
            <TextView 
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@id/item_preview"
                android:layout_toLeftOf="@id/item_switch"
                android:layout_marginBottom="6dip"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:drawablePadding="2dip"
                />
            <TextView
                android:id="@+id/item_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_toRightOf="@id/item_preview"
                android:layout_toLeftOf="@id/item_switch"
                android:layout_below="@id/item_title"
                android:layout_marginBottom="6dip"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:layout_marginBottom="6dip"
            android:visibility="gone"
            />
    </LinearLayout>
</com.mediatek.cmmb.app.RevealLinearLayout>
