<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout android:id="@+id/top_panel"
		    android:layout_width="match_parent"
		    android:layout_height="54dip"
			android:paddingRight="34dip"     
			android:paddingLeft="34dip" 
			android:background="@color/player_control_bg"    
		    android:layout_alignParentTop ="true">
	<ImageView android:id="@+id/favorite_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"	
        android:focusable = "true"
        android:src="@drawable/add_to_favorite"/> 

    <ImageView android:id="@+id/signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"   
        android:layout_toLeftOf="@+id/channel_name"/>        
	<TextView android:id="@+id/channel_name"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"    
		  android:textSize="16sp"
          android:layout_centerInParent="true"	        	      
	      android:textColor="#ffffffff"/>
	<ImageView android:id="@+id/capture_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"	                
        android:layout_alignParentRight="true"    
        android:focusable = "true"
        android:src="@drawable/btn_ic_capture"/>         
	</RelativeLayout> 

	<RelativeLayout android:id="@+id/bottom_panel"
			    android:layout_width="match_parent"
			    android:layout_height="54dip"		
			    android:layout_alignParentBottom ="true"
			    android:background="@color/player_control_bg">
	    <ImageView android:id="@+id/mute_control"
		    android:layout_width="74dip"
		    android:layout_height="38dip"
			android:layout_toLeftOf="@+id/previous_control"		  			  	
		    android:layout_centerVertical="true"		
        android:focusable = "true"
		    
			android:scaleType="center"	        	    
	        android:background="@+drawable/player_button_background"/> 
        <ImageView android:id="@+id/previous_control" 
	        android:layout_width="96dip"
	        android:layout_height="38dip"
		  	android:layout_marginLeft="15dp"	
		  	android:layout_marginRight="15dp"
			android:layout_toLeftOf="@+id/play_stop"		  			  	
			android:scaleType="center"	        		
	        android:src="@+drawable/previous_control" 
	        android:layout_centerVertical="true"	        
        android:focusable="true"
	        android:background="@+drawable/player_button_background"/>
	    <ImageView android:id="@+id/play_stop" 
	        android:layout_width="96dip"
	        android:layout_height="38dip"
			android:scaleType="center"	        	        
	        android:layout_centerInParent="true"	
	        android:src="@+drawable/btn_ic_stop" 
	                android:focusable = "true"

	        android:background="@+drawable/player_button_background"/>
	    <ImageView android:id="@+id/next_control" 
	        android:layout_width="96dip"
	        android:layout_height="38dip"
		  	android:layout_marginLeft="15dp"	
		  	android:layout_marginRight="15dp"	
			android:layout_toRightOf="@+id/play_stop"		  			  	
	        android:scaleType="center"	        
	        android:src="@+drawable/next_control" 
	        android:layout_centerVertical="true"	
        android:focusable = "true"	        	        
	        android:background="@+drawable/player_button_background"/>
	    <ImageView android:id="@+id/channel_list" 
	        android:layout_width="74dip"
	        android:layout_height="38dip"
			android:scaleType="center"	        
	        android:layout_centerVertical="true"	        	        			
			android:layout_toRightOf="@+id/next_control"
	        android:src="@+drawable/channel_list_control" 
        android:focusable = "true"
	        android:background="@+drawable/player_button_background"/>	        
	</RelativeLayout>
</RelativeLayout> 
